{
  "name": "xmr-stats-cli",
  "version": "1.0.0",
  "description": "CLI for displaying XMR mining pool and network hashrate stats with persistent peak tracking.",
  "author": "Phil",
  "license": "MIT",
  "bin": {
    "xmr-stats": "cli.cjs"
  },
  "type": "module",
  "scripts": {
    "dev:all": "concurrently \"vite\" \"node server.cjs\"",
    "dev": "vite",
